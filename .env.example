# URL of the Actual Finance server
ACTUAL_SERVER_URL=http://your-actual-server:5006

# Password for Actual Finance server (keep secret)
ACTUAL_PASSWORD=your_password_here

# Budget sync ID for Actual Finance
ACTUAL_BUDGET_SYNC_ID=your-budget-sync-id-here

# Directory to store bridge data
MCP_BRIDGE_DATA_DIR=./actual-data

# Port for MCP bridge server
MCP_BRIDGE_PORT=3600

# Host to bind the Express server (e.g. 0.0.0.0)
MCP_BRIDGE_BIND_HOST=0.0.0.0

# Human-friendly advertised URL shown to clients (optional)
MCP_BRIDGE_ADVERTISED_URL=http://192.168.1.100:3600

# Authorization token for SSE (if used)
MCP_SSE_AUTHORIZATION=your_sse_authorization_token

# SSE and HTTP paths (optional)
MCP_SSE_PATH=/sse
MCP_HTTP_PATH=/http

# ------- Logging / storage settings -------

# Enable storing logs to disk (true/false)
MCP_BRIDGE_STORE_LOGS=false

# Directory where bridge logs will be written (absolute or relative)
MCP_BRIDGE_LOG_DIR=./logs

# Compress log files older than N hours (integer)
MCP_BRIDGE_COMPRESS_AFTER_HOURS=1

# Rotation / retention tuning (optional)
# Date pattern used for rotated log filenames (winston/daily-rotate-file format)
MCP_BRIDGE_ROTATE_DATEPATTERN=YYYY-MM-DD

# Max size per rotated file (e.g. 20m, 100m)
MCP_BRIDGE_MAX_LOG_SIZE=20m

# How long to keep rotated files (e.g. 14d, 30d)
MCP_BRIDGE_MAX_FILES=14d

# Log level for console & file output (error, warn, info, debug)
MCP_BRIDGE_LOG_LEVEL=debug