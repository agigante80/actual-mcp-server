{
  "name": "actual-mcp-server",
  "displayName": "Actual MCP Server",
  "version": "0.4.5",
  "description": "MCP server providing 51 tools for AI-driven financial management with Actual Budget - session management, query, bank sync, and multi-budget support",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && node scripts/register-tsconfig-paths.js -- --debug",
    "start": "node dist/src/index.js",
    "generate-tools": "node scripts/generate-tools-node.js",
    "verify-tools": "npm run build && node scripts/verify-tools.js",
    "check:coverage": "node scripts/list-actual-api-methods.mjs",
    "test:unit-js": "node tests/unit/transactions_create.test.js",
    "test:adapter": "npm run build && node dist/src/tests_adapter_runner.js",
    "test:e2e": "npx playwright test",
    "test:mcp-client": "npm run build && node scripts/register-tsconfig-paths.js -- --http --test-mcp-client",
    "test:query": "node tests/test-mcp-query.mjs",
    "version:current": "cat VERSION",
    "version:dev": "node scripts/version-dev.js",
    "version:bump": "node scripts/version-bump.js",
    "version:check": "node scripts/version-check.js",
    "release:major": "npm run version:bump -- major",
    "release:minor": "npm run version:bump -- minor",
    "release:patch": "npm run version:bump -- patch"
  },
  "dependencies": {
    "@actual-app/api": "^25.12.0",
    "@jlongster/sql.js": "^1.6.7",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "axios": "^1.12.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "express": "^5.2.1",
    "mitt": "^3.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "3.25.76"
  },
  "overrides": {
    "zod": "3.25.76"
  },
  "comments": {
    "zod-version": "CRITICAL: Must use Zod 3.x. Zod 4.x breaks zod-to-json-schema causing LibreChat validation to fail. See docs/ZOD_VERSION_CONSTRAINT.md"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/express": "^5.0.3",
    "@types/google-protobuf": "^3.15.12",
    "@types/node": "^25.0.3",
    "nodemon": "^3.0.0",
    "openapi-typescript": "^7.10.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "yaml": "^2.8.1"
  },
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "keywords": [
    "librechat",
    "actual-finance",
    "bridge",
    "chatbot"
  ],
  "author": ""
}
