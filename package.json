{
  "name": "actual-mcp-server",
  "displayName": "Actual MCP Server",
  "version": "0.1.0",
  "description": "MCP server providing 42 tools for AI-driven financial management with Actual Budget - includes query, bank sync, and multi-budget support",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && node register-tsconfig-paths.js -- --debug",
    "start": "node dist/src/index.js",
    "generate-tools": "node scripts/generate-tools-node.js",
    "verify-tools": "npm run build && node scripts/verify-tools.js",
    "check:coverage": "node scripts/list-actual-api-methods.mjs",
    "test:unit-js": "node tests/unit/transactions_create.test.js",
    "test:adapter": "npm run build && node dist/src/tests_adapter_runner.js",
    "test:e2e": "npx playwright test",
    "test:mcp-client": "npm run build && node register-tsconfig-paths.js -- --http --test-mcp-client"
  },
  "dependencies": {
    "@actual-app/api": "^25.9.0",
    "@jlongster/sql.js": "^1.6.7",
    "@librechat/api": "github:danny-avila/LibreChat#main",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "axios": "^1.12.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "mitt": "^3.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/axios": "^0.9.36",
    "@types/date-fns": "^2.5.3",
    "@types/express": "^5.0.3",
    "@types/google-protobuf": "^3.15.12",
    "@types/node": "^24.5.2",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.0.0",
    "openapi-typescript": "^7.10.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "yaml": "^2.8.1"
  },
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "keywords": [
    "librechat",
    "actual-finance",
    "bridge",
    "chatbot"
  ],
  "author": ""
}
